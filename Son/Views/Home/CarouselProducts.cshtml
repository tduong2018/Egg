<section class="list-products slider">
    @for (int j = 0; j < 12; j++)
    {
        <div class="" title="">
            <div>
                <img class="card-img-top" src="~/Images/img-002.jpg" />
                <span class="btn btn-warning position-absolute" style="font-size: 20%;" data-toggle="tooltip" title="Thêm vào gi? hàng"><i class="fa fa-shopping-cart"></i></span>
            </div>
            <div class="text-center">
                <a class="card-text" style="text-decoration-line: none;" href="#">áo so mi trắng thanh lịch</a><br />
