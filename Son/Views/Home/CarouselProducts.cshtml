@*Catagory*@

<section class="list-products slider">
    @for (int j = 0; j < 12; j++)
    {
        <div class="card-product" title="">
            <div>
                <img class="card-img-top" src="~/Images/img-002.jpg" />
                <span class="btn btn-warning position-absolute ng-hide" style="font-size: 20%;" data-toggle="tooltip" title="Thêm vào gi? hàng"><i class="fa fa-shopping-cart"></i></span>
            </div>
            <div class="text-center">
                <a class="card-text" style="text-decoration-line: none;" href="#">áo so mi trắng thanh lịch</a><br />
            </div>
            <div class="pt-1 pl-1 pr-1">
                <span class="fa fa-eye"> 500</span>
                <span class="float-right">
                    <i class="fa fa-star text-warning"></i>
                    <i class="fa fa-star text-warning"></i>
                    <i class="fa fa-star text-warning"></i>
                    <i class="fa fa-star text-warning"></i>
                    <i class="fa fa-star-half-alt text-warning"></i>
                    <span>(6)</span>
                </span>
            </div>
        </div>
    }
</section>
<script type="text/javascript">
    $(function () {
        $(".list-products").slick({
            dots: true,
            infinite: false,
            slidesToShow: 6,
            slidesToScroll: 2
        });
    });
    $(function () {
        function resizeText(className, width) {
            var size = ($(className).innerWidth() * width) + '%';
            $(className).css("font-size", size);
            return this
        };
        resizeText("body", 0.06);
        window.onresize = function () {
            resizeText("body", 0.06);
        }
    });
</script>
