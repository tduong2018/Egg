                                                            <small class="fa fa-star text-warning"></small>
                                                            <small class="fa fa-star text-warning"></small>
                                                            <small class="fa fa-star text-warning"></small>
                                                            <small class="fa fa-star-half-alt text-warning"></small>
                                                        </div>
                                                    </div>
                                                </div>
                                                <a class="Button-card" href="#">
                                                    <span class="btn btn-warning float-right" data-toggle="tooltip" title="Thêm vào giỏ hàng"><i class="fa fa-shopping-cart"></i></span>
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        <div class="carousel-item">
                            <div class="row">
                                @for (int j = 1; j < 7; j++)
                                {
                                    <div class="col-md-2" data-toggle="tooltip" title="áo sơ mi nữ trắng thanh lịch">
                                        <div class="card">
                                            <img class="card-img-top" src="~/Images/img-002.jpg" />
                                            <div class="card-body bg-light">
                                                <a class="card-text" style="text-decoration-line: none;" href="#">áo sơ mi nữ trắng thanh lịch</a><br />
