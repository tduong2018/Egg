            <div id="demo" class="carousel slide position-relative" data-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < 3; i++)
                    {
                        var s = "active";
                        if (i == 0)
                        {
                            <div class="carousel-item @s">
